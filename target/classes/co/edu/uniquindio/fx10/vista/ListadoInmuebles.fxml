<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contenedorPrincipal" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.fx10.controlador.ListadoController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label fx:id="lblTitulo" style="-fx-text-fill: #2c3e50;" text="Listado de Inmuebles">
            <font>
                <Font name="System Bold" size="28" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnVolver" onAction="#onVolver" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Volver" />
    </HBox>

    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">

        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;" text="Lista de inmuebles">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaInmuebles" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTipo" prefWidth="185.0" text="Tipo" />
                <TableColumn fx:id="colCiudad" prefWidth="110.0" text="Ciudad" />
                <TableColumn fx:id="colHabitaciones" prefWidth="93.0" text="Habitaciones" />
            <TableColumn fx:id="colPisos" prefWidth="85.0" text="Pisos" />
            <TableColumn fx:id="colPrecio" prefWidth="178.0" text="Precios" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button fx:id="btnEliminar" onAction="#onEliminarInmueble" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="Eliminar Inmueble" />
        </HBox>
    </VBox>

</VBox>
